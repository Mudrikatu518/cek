    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const skillSelector = document.getElementById('skill-selector');
            const generateSkillBtn = document.getElementById('generate-skill-btn');
            const skillDescriptionOutput = document.getElementById('skill-description-output');
            const loadingSpinner = document.getElementById('loading-spinner');

            generateSkillBtn.addEventListener('click', async () => {
                const selectedSkill = skillSelector.value;
                skillDescriptionOutput.innerHTML = 'Memuat...';
                loadingSpinner.style.display = 'block'; // Show spinner

                // Prompt for the LLM
                const prompt = `Sebagai seorang Admin/FA Staff, bagaimana keahlian "${selectedSkill}" dapat memberikan manfaat konkret bagi perusahaan? Berikan deskripsi profesional dalam 2-3 kalimat.`;

                try {
                    let chatHistory = [];
                    chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                    const payload = { contents: chatHistory };
                    const apiKey = ""; // Canvas will automatically provide the API key
                    const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const result = await response.json();

                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        const text = result.candidates[0].content.parts[0].text;
                        skillDescriptionOutput.innerHTML = text;
                    } else {
                        skillDescriptionOutput.innerHTML = 'Gagal menghasilkan deskripsi. Silakan coba lagi.';
                        console.error('Unexpected API response structure:', result);
                    }
                } catch (error) {
                    skillDescriptionOutput.innerHTML = 'Terjadi kesalahan saat memproses permintaan. Pastikan koneksi internet Anda stabil.';
                    console.error('Error calling Gemini API:', error);
                } finally {
                    loadingSpinner.style.display = 'none'; // Hide spinner
                }
            });
        });
    </script>
